


<div class="container">
  <div class="row">
    <div class="col-sm-10">
      <% if post.errors.any? %>
        <ul id="errors">
          <% post.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">

      <%= form_for post, :html => {:class => "form-horizontal"} do |x| %>
        <div class="form-group">
        <%= x.label :title, "Title:", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
          <%= x.text_field :title, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
        <%= x.label :author_id, "Author ID:", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
          <%= x.text_field :author_id, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
        <%= x.label :body, "Body:", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
          <%= x.text_area :body, class: "form-control", rows: "5" %>
          </div>
        </div>
        <div class="form-group">
        <%= x.label :image, "Image:", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
          <%= x.text_field :image, class: "form-control" %>
          </div>
        </div>
        <%= x.submit "Submit", class: "col-sm-offset-2 btn btn-default btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
